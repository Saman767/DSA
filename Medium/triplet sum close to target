class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        int n = nums.size();
        
        // Step 1: sort array
        sort(nums.begin(), nums.end());
        
        // Step 2: initialize bestSum with first triplet
        int bestSum = nums[0] + nums[1] + nums[2];
        
        // Step 3: fix i
        for (int i = 0; i < n - 2; i++) {
            int left = i + 1;
            int right = n - 1;
            
            // Step 4: two pointer loop
            while (left < right) {
                int sum = nums[i] + nums[left] + nums[right];
                
                // update bestSum if this sum is closer to target
                if (abs(sum - target) < abs(bestSum - target)) {
                    bestSum = sum;
                }
                
                // move pointers
                if (sum < target) {
                    left++;
                } 
                else if (sum > target) {
                    right--;
                } 
                else {
                    // perfect match
                    return sum;
                }
            }
        }
        
        // return closest sum after checking all triplets
        return bestSum;
    }
};
